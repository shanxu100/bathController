<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/lightgrey"
    android:padding="10dp">


    <Button
        android:id="@+id/btn_enter_config_mode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="10dp"
        android:text="进入配置模式"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btn_exit_config_mode_not_save"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="退出配置模式（不保存）"
        android:visibility="gone"
        app:layout_constraintStart_toStartOf="@id/btn_enter_config_mode"
        app:layout_constraintTop_toBottomOf="@id/btn_enter_config_mode" />

    <Button
        android:id="@+id/btn_exit_config_mode_save"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="退出配置模式（保存）"
        android:visibility="gone"
        app:layout_constraintStart_toStartOf="@id/btn_exit_config_mode_not_save"
        app:layout_constraintTop_toBottomOf="@id/btn_exit_config_mode_not_save" />

    <Button
        android:id="@+id/btn_reset_config"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="恢复出厂设置"
        app:layout_constraintStart_toStartOf="@id/btn_enter_config_mode"
        app:layout_constraintTop_toBottomOf="@id/btn_enter_config_mode" />
</android.support.constraint.ConstraintLayout>